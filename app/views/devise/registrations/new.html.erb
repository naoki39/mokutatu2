<h2>新規登録をしよう！！</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "アイコン" %><br />
    <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
  </div>

  <div class="field">
    <%= f.label "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(半角英数字<%= @minimum_password_length %> 文字以内)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "達成したい目標を記入しよう！" %><br />
    <%= f.text_field :goal, autofocus: true, autocomplete: "goal" %>
  </div>

  <div class="field">
    <%= f.label "中間目標を決めよう！" %><br />
    <%= f.text_field :second_goal, autofocus: true, autocomplete: "second_goal" %>
  </div>

  <div class="field">
    <%= f.label "目標を達成するために、やることを決めよう！" %><br />
    <%= f.text_field :to_do, autofocus: true, autocomplete: "to_do" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

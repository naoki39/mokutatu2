<%= link_to image_tag(post.user.image.variant(resize: '500x500'), class: "posts_user_icon"), user_path(post.user.id) %>
<div class="post_contents">
 <%= link_to post_path(post.id) do %>
     <p class="post_content_name"><%= post.user.nickname %></p>
     <p class="post_content"><%= l post.created_at %></p>
     <p class="post_content"><%= "【今日やったこと】#{post.text}" %></p>
 <% end %>
</div>
